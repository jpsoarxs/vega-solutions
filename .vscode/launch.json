	"version": "0.1.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach NestJS",
			"port": 9229,
			"restart": true
		},
		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"runtimeArgs": [
				"--inspect-brk",
				"${workspaceRoot}/node_modules/.bin/jest",
				"--runInBand",
				"--watch",
				"--onlyChanged"
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}